{
    "name": "Megamarket",
    "version": "0.2",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html",
        "default_icon": "favicon.ico"
    },
    "icons": {
        "32": "favicon.ico",
        "72": "favicon.ico",
        "128": "favicon.ico",
        "512": "favicon.ico"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://megamarket.ru/*"
    ],
    "background": {
        "service_worker": "service.js"
    }
}
